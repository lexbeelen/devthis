{
    "compilerOptions": {
        "target": "es5",
        "outDir": "./dist",
        "rootDir": "./src",
        "strict": true,
        "strictNullChecks": true,
        "module": "commonjs",
        "sourceMap": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "lib": ["es5", "es2017", "dom"],
        "declaration": true,
        "resolveJsonModule": true,
        "esModuleInterop": true
    },
    "include": ["src/**/*"]
}
